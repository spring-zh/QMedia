<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/button_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview Record"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.085" />

    <Button
        android:id="@+id/button_select"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="19dp"
        android:text="Select"
        app:layout_constraintLeft_toLeftOf="@+id/button_preview"
        app:layout_constraintRight_toRightOf="@+id/button_preview"
        app:layout_constraintTop_toBottomOf="@+id/button_preview"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_camrea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_camera"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/button_select"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/button_select"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/button_select"
        app:layout_constraintHorizontal_bias="0.215"/>


</android.support.constraint.ConstraintLayout>
